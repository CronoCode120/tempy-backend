{
  "compilerOptions": {
    "module": "ES6",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "allowJs": true
  },
  "lib": ["es2015"],
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
